\mode<presentation>

\setbeamersize{text margin  left=18pt}
\setbeamersize{text margin right=18pt}

\defbeamertemplate*{headline}{TUDo}[1][0]
{
    \vspace{6pt}%
    \hspace{18pt}%
    \rlap{\includegraphics[height=0.5cm]{logos/tu.pdf}}%
    \hfill%
    \Huge\insertshorttitle%
    \hfill%
    \llap{\insertinstitute}%
    \hspace{18pt}

    \vspace{4pt}%
    \hspace{18pt}%
    \usebeamercolor[fg]{headsepline}\hrulefill%
    \hspace{18pt}

    \vspace{8pt}
}

\defbeamertemplate*{footline}{TUDo}[1][0]
{
    \hspace{18pt}%
    \usebeamercolor[fg]{author}%
    \usebeamerfont{author}%
    \rlap{\insertauthor,%
    \usebeamerfont{date}%
    \insertdate}%
    \hfill%
    \usebeamercolor[fg]{section in header}%
    \ifx\insertsubsection\empty%
      \usebeamerfont{section in head/foot}%
      \insertsection%
    \else%
      \usebeamerfont{section in head/foot}%
      \insertsection:\@%
      \usebeamerfont{subsection in head/foot}%
      \insertsubsection%
    \fi%
    \hfill%
    \usebeamercolor[fg]{frame number}%
    \usebeamerfont{page number in head/foot}%
    \llap{\insertframenumber /\inserttotalframenumber}%
    \hspace{18pt}

    \vspace{5pt}
}

\mode<all>
